<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:contentInsetStart="16dp"
    app:contentInsetRight="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView android:id="@+id/img_star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/btn_star"
            android:layout_centerVertical="true"/>

        <LinearLayout android:id="@+id/lnr_title_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="invisible">

            <TextView android:id="@+id/txt_title_1_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My "
                android:textStyle="bold"
                android:textSize="@dimen/title_txt_size_small"/>

            <TextView android:id="@+id/txt_title_2_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="friends"
                android:textSize="@dimen/title_txt_size_small"/>

        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_input_add"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

</androidx.appcompat.widget.Toolbar>